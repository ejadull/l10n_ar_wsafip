<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_config_settings" model="ir.ui.view">
            <field name="name">account settings</field>
            <field name="model">account.config.settings</field>
            <field name="inherit_id" ref="l10n_ar_invoice.view_account_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Create new point of sale for AFIP']/.." position="after">
                    <div>
                        <button string="Associate point of sale to AFIP electronic invoice"
                            icon="gtk-go-forward"
                            name="%(action_wsafip_fe_config)d"
                            type="action"
                            class="oe_link"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
